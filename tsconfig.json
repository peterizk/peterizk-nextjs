{
  "compilerOptions": {
    /* —— language / emit —— */
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve", // ✅ enables TSX
    /* —— type-safety —— */
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* —— project refs —— */
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ] // ✅ alias for Header, Footer…
    },
    /* —— misc —— */
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
